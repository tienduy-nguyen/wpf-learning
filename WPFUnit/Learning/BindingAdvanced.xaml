<Window x:Class="WPFUnit.Learning.BindingAdvanced"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFUnit.Learning"
        mc:Ignorable="d"
        Title="BindingAdvanced" Height="450" Width="800">
    <StackPanel Margin="50">
        <StackPanel.Resources>
            <local:AgeConvert x:Key="ageConvert"></local:AgeConvert>
        </StackPanel.Resources>
        <DatePicker Name="dpkDate"></DatePicker>
        <TextBlock Text="{Binding ElementName= dpkDate, Path=SelectedDate, 
            Converter={StaticResource ResourceKey=ageConvert}}"
                   Margin="3,0,0,0"></TextBlock>
    </StackPanel>
</Window>
