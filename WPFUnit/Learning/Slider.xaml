<Window x:Class="WPFUnit.WPF.Slider"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFUnit.WPF"
        mc:Ignorable="d"
        Title="Slider" Height="300" Width="500"
        ResizeMode="CanResizeWithGrip">
    <Grid>


            <Slider x:Name="sldMain" 
                    Maximum="100" Value="50"
                    VerticalAlignment="Bottom"
                    Margin="20"></Slider>
            <TextBox x:Name="txbValueSlider" 
                     VerticalAlignment="Center"
                 Text="{Binding Path=Value, ElementName = sldMain}"></TextBox>


    </Grid>
</Window>
