<Window x:Class="WPFUnit.Learning.Combobox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFUnit.Learning"
        mc:Ignorable="d"
        Title="Combobox" Height="450" Width="800"
        ResizeMode="CanResizeWithGrip">
    <Grid>
        <Grid.Resources>
            <Style TargetType="Button" x:Key="btnStylePurple">
                <Setter Property="Width" Value="100"></Setter>
                <Setter Property="Background" Value="Purple"></Setter>
            </Style>
        </Grid.Resources>
        <ComboBox>
            <Button Content="Value 1"/>
            <Button Content="Value 2"/>
            <Button Content="Value 3"/>

        </ComboBox>
    </Grid>
</Window>
